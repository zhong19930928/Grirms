<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp" >

        <ImageView
            android:id="@+id/iv_weidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/wechat_weiduxiaoxi" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_notice_time"
            android:layout_toRightOf="@+id/iv_weidu" >

            <TextView
                android:id="@+id/tv_notice_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/wechat_chat_notice_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:paddingRight="10dp"
            android:text="927"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_nimi_time" />
    </RelativeLayout>

    <!--
         <ImageView
        android:id="@+id/iv_notice_fujian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:src="@drawable/wechat_fujiangren" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/wechat_weiduxiaoxi"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_notice_content_jieshao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="this is a test content"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />

        <TextView
            android:id="@+id/tv_notice_bumen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:paddingRight="10dp"
            android:text="@string/job_department"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
    </LinearLayout>

</LinearLayout>