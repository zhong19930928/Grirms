<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="10dp"
    android:id="@+id/question_common_item_view"
    android:gravity="center_vertical"
   android:background="@drawable/home_menu_onclick">
    <TextView 
        android:id="@+id/question_common_item_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="@string/help_common_question"
        android:textSize="25sp"
        android:textColor="@color/Cambridgeblue"
        android:layout_height="wrap_content"/>
      <ImageView android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="15dp"
          android:src="@drawable/right"/>
</LinearLayout>
