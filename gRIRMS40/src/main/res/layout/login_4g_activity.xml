<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/notice_detail_del_press"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/notice_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_4g_title"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:padding="0.5dp" >

            <EditText
                android:id="@+id/et_login_4g_phoneno"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:hint="请输入本机手机号"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="phone"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_4g_msg"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/login_4g_btn_bg"
            android:padding="10dp"
            android:text="发送短信"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:padding="0.5dp" >

            <EditText
                android:id="@+id/et_login_4g_code"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:hint="请输入激活码"
                android:textCursorDrawable="@drawable/color_cursor"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_4g_msg_code"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/login_4g_btn_bg"
            android:padding="10dp"
            android:text="激活账号"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:text="*激活码将通过短信发送给您"
        android:textColor="@color/black" />

</LinearLayout>