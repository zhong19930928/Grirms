<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:id="@+id/ll"
    android:orientation="horizontal"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_products_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/order3_xiadan_product_name"
            android:text="Apple iPad mini Retina7.9" />
 		<TextView
            android:id="@+id/tv_num_products_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/order3_xiadan_home_product_text_size"
                android:textColor="@color/black"
                android:text="库存:20" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price_products_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size"
                    android:textColor="@color/red2"
                    android:text="￥7,988" />

                <TextView
                    android:id="@+id/sale_products_list_item"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:text="促"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	
    <Button
        android:id="@+id/add_to_shopping_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:focusable="false"
        android:background="@drawable/order3_shoppingcar_btn_selector" />

</LinearLayout>