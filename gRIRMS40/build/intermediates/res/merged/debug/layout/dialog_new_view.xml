<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/nearby_list_shape_5"
        android:padding="10dp" >

        <TextView
            android:id="@+id/dialog_new_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text="@string/regist_email_tip"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dialog_new_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_new_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/nearby_store_confirm_btn"
           android:paddingTop="7dp"
           android:paddingBottom="7dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/confirm"
            android:textColor="@color/app_color"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>