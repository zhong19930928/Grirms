<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/func_menu_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/ll_report_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_actionbar_height"
        android:background="@color/app_color"
        android:gravity="center_horizontal"
        android:padding="@dimen/normal_atcionbar_pading" >

        <TextView
            android:id="@+id/tv_report_titleName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/visit_the_store"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_title_text_size" />

        <LinearLayout
            android:id="@+id/ll_report_checkIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/visit_chickin_onclick"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/normal_title_back_width"
                android:layout_height="@dimen/normal_title_back_height"
                android:background="@drawable/visit_checkin"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_report_btn__layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>