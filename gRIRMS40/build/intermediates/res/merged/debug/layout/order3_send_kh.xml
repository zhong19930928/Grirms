<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单客户"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_kh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:text="北京田园食品有限公司"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系人"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_lxr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:autoLink="phone"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:text="张三 18910901892"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客户地址"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_khdz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:text="北京市朝外大街万通中心"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_dd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
             android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:text="151123456001		2015-05-02\n151123456001"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>