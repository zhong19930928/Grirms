<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6e7e9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/zrmodule_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/zrmodule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="资产盘点"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="资产名称："
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/z_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="键盘（台）"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="180dp"
                    android:gravity="center"
                    android:text="待盘点"
                    android:textColor="#69c645"
                    android:textSize="12sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="规格型号："
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/z_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="xy4585643587"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/alter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2017-10-24"
                    android:textColor="#1b8aff"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="旧数据"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条形码"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="656565663332"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资产分类"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/classification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="啊火俗话说得好发票"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属公司"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="啊火俗话说得好发票"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用公司"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/use_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="按时间东坡"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />

            <LinearLayout
                android:id="@+id/is_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="15dp"
                    android:background="#FFFFFF"
                    >
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用人"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/use_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="隔壁老王"
                        android:gravity="center"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ececed"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="15dp"
                    android:background="#FFFFFF"
                    >
                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购入日期"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="2017-10-24"
                        android:gravity="center"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ececed"
                    />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                >
                <LinearLayout
                    android:id="@+id/on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/show_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="规格型号，使用人"
                        android:gravity="center_vertical"
                        android:textColor="#1b8aff"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:id="@+id/show_im"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ivb_open"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="新数据"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#333333"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:paddingLeft="15dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="区域"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right"
                    android:text="可选择"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="存放地点"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />
                </RelativeLayout>


                <EditText
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="可添加"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:background="@null"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用公司"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/user_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用部门"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用人"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/user_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/right"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ececed"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="100dp"
                >
                <ImageView
                    android:id="@+id/submit"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:src="@drawable/submit"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
