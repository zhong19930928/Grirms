<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ll_question_comment_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/rb_question_comment_item"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/pic_question_radio" />

        <TextView
            android:id="@+id/tv_option_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="A"
            android:textColor="@color/quesetion_title_second_color" />
        <TextView
            android:id="@+id/tv_option_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray_sub"
            android:text=""
            />

        <LinearLayout
            android:id="@+id/ll_option_content"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#D8D8D8"
            android:padding="0.5dp" >

            <EditText
                android:id="@+id/ed_option_content"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="@string/question_content"
                android:textColorHint="#D8D8D8"
                android:scrollbars="vertical"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/quesetion_title_second_color"
                android:textSize="@dimen/common_text_size_small" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>