<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/question_bg"
    android:padding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_question_preview_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_question_preview_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/quesetion_title_first_color"
            android:textSize="@dimen/common_text_size_middle_2" />
        <ImageView
            android:id="@+id/iv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/address_down"/>
    </LinearLayout>

    <com.yunhu.yhshxc.activity.questionnaire.ListViewForScrollView
        android:id="@+id/lv_question_preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:visibility="gone" >
    </com.yunhu.yhshxc.activity.questionnaire.ListViewForScrollView>

</LinearLayout>