<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_actionbar_height"
        android:background="@color/app_color"
        android:padding="@dimen/normal_atcionbar_pading" >

        <ImageView
            android:id="@+id/apk_version_back"
            android:layout_width="@dimen/normal_title_back_width"
            android:layout_height="@dimen/normal_title_back_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_c_title"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_icon_blue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_main" />

        <TextView
            android:id="@+id/id_appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_icon_blue"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/app_normalname"
            android:textColor="@color/black1"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/apk_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text=""
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_deep"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/btn_version"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/home_menu_onclick"
        android:gravity="center|left" >

        <TextView
            android:id="@+id/apk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/person_c_title1"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/apk_version_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/black1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_function_introduction"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/home_menu_onclick"
        android:gravity="center|left" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/person_c_title2"
            android:textColor="@color/black1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_service_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="@drawable/home_menu_onclick"
        android:gravity="center|left" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/person_c_title3"
            android:textColor="@color/black1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="400-818-8809"
             />
    </RelativeLayout>

</LinearLayout>