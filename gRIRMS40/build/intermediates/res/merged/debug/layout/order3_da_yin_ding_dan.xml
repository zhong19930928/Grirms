<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <FrameLayout
        android:id="@+id/fl_send_combin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:gravity="center_horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text="订单预览"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/ll_order3_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/order3_search_bg_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="invisible"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拓展"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号 "
                    android:textColor="@color/order3_search_text"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_preview "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="201504071234567002"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单时间 "
                    android:textColor="@color/order3_search_text"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_time "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2015-5-3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单客户 "
                    android:textColor="@color/order3_search_text"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_user "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="北京田园食品有限公司"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yulan_lxr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="联系人 "
                    android:textColor="@color/order3_search_text"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_contact "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="毕福剑"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_tel_num "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:autoLink="phone"
                    android:text="18910859999"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单金额 "
                    android:textColor="@color/order3_search_text"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="115000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/order3_search_yulan_bg"
                android:padding="5dp"
                android:text="订单明细"
                android:textColor="@color/black"
                android:textSize="@dimen/order3_xiadan_yulan_text_size" />

            <LinearLayout
                android:id="@+id/order_detail_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:visibility="visible" >
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/order3_search_yulan_bg"
                android:padding="5dp"
                android:text="赠品/折扣情况"
                android:textColor="@color/black"
                android:textSize="@dimen/order3_xiadan_yulan_text_size" />

            <LinearLayout
                android:id="@+id/zengpin_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >
            </LinearLayout>

            <TextView
                android:id="@+id/tv_yulan_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="折扣 共2900元"
                android:textColor="@color/black"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/discount_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
 		<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="减免"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_jm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="10255525"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已收款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_sk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="10255525"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未收款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_wsk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="10255525"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="留言"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_ly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="10255525"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="客户签字："
                android:textColor="@color/black"
                android:textSize="@dimen/order3_xiadan_yulan_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="下单人签字："
                android:textColor="@color/black"
                android:textSize="@dimen/order3_xiadan_yulan_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>