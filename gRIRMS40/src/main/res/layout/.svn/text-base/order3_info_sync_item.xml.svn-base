<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_discount_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_discount_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:text="小糊涂仙 买3送1"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="有效期限："
            android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_info_sync_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-01-01~2015-05-01"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:text="促销方式："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_info_sync_item_func"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单品买满数量送赠品"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:text="促销内容："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_info_sync_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总和买满金额1000元，减免金额300元"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/order3_xiadan_yulan_text_size"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:text="促销说明："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_info_sync_item_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多买多送"
             android:textSize="@dimen/order3_xiadan_home_product_text_size"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>