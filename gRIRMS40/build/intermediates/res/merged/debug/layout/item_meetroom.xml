<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <View
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:background="@color/zr_meeting_beizhu"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:text="Roomname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:maxLength="10"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_people_number"
        android:text="people_nu"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_name"
        android:textSize="13sp"
        android:textColor="@color/gray_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_article1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/iv_article2"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/iv_article3"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/iv_article4"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/iv_article5"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_article7"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="..."
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bookroom"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:text="预定"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:src="@drawable/right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
