<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_sublight"
    tools:context="com.yunhu.yhshxc.inspection.InspectionMenuActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color">

        <RelativeLayout
            android:id="@+id/meeting_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/activity_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议管理"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:id="@+id/add_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/add_icon" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_unfinish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/gray_main"
            android:gravity="center"
            android:text="正在进行"
            />
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/gray_main"
            android:layout_toRightOf="@+id/tv_unfinish"
            android:gravity="center"
            android:text="已结束"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_height="2dp">
        <TextView
            android:id="@+id/tv_unfinish_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/app_color"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/gray_main"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_finish_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/gray_main"
            android:layout_toRightOf="@+id/tv_unfinish"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:background="@color/gray_sublight"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.yunhu.android.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/meetingag_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray_light"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderBackground="@color/white"
        ptr:ptrHeaderTextColor="@color/black"
         />
    <LinearLayout
        android:id="@+id/over_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <com.yunhu.android.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/over_listview"
            android:divider="@color/gray_light"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="176dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/index_empty"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="没有任务，放松一下"
            android:textSize="20sp"
            android:textColor="#747474"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="点击右上角图标添加任务"
            android:textSize="16sp"
            android:textColor="#999999"
            />
    </LinearLayout>

</LinearLayout>
