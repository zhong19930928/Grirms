<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单编号"
                        android:textColor="@color/order3_search_text"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单客户"
                        android:textColor="@color/order3_search_text"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_kh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="联系人"
                        android:textColor="@color/order3_search_text"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:autoLink="phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/ll_order3_send_p_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_ddje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="历史收款"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_lssk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未付金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_wfje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="本次收款"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="留言"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                    <TextView
                        android:id="@+id/tv_order3_send_p_msg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order3_xiadan_yulan_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order3_send_p_khqz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:text="客户签字"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />

                <TextView
                    android:id="@+id/tv_order3_send_p_shrqz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:text="送货人签字"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order3_xiadan_yulan_text_size" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_home "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/btn_order3_send_p_dy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/app_color_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/img_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order3_dayin"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打印"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_order3_send_p_photo "
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/app_color_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/img_collection "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order3_take_pictrue"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_collection "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_order3_send_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/app_color_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/img_shopping_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order3_submit"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_shopping_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>