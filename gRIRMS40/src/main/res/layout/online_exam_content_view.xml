<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/question_bg"
    android:padding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_online_content_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_online_content_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="第一部分 单选题"
            android:textSize="@dimen/common_text_size_middle_2"
            android:textColor="@color/quesetion_title_first_color"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="调查中观察客户反映，如果客户不干兴趣可以终止调查"
            android:textColor="@color/quesetion_title_second_color"
            android:visibility="gone"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_online_content_add_item_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >
    </ListView>

</LinearLayout>