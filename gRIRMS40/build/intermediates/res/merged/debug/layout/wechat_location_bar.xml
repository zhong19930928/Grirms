<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_location_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/fl_huiliao"
            style="@style/Buttom_Item_Style" >

            <LinearLayout
                android:id="@+id/layout_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/img_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wechat_huiliao"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingTop="2dp"
                    android:text="@string/im_chat"
                    android:textColor="@color/wechat_location_bar"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shopping_car_ll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:background="@drawable/wechat_number_weidu"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_notice"
            style="@style/Buttom_Item_Style" >

            <LinearLayout
                android:id="@+id/layout_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/img_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wechat_notice"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingTop="2dp"
                    android:text="@string/notification"
                    android:textColor="@color/wechat_location_bar"
                    android:textSize="10sp" />
            </LinearLayout>

           <!--  <ImageView
                android:id="@+id/tv_notice_ll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/wechat_weiduxiaoxi_notice"
                android:gravity="center"
                android:textColor="@color/white"/> -->
            <TextView
                android:id="@+id/tv_notice_ll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:background="@drawable/wechat_number_weidu"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_focus"
            style="@style/Buttom_Item_Style"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dip" >

            <ImageView
                android:id="@+id/img_focus "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_contact"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:text="@string/contact_person"
                android:textColor="@color/wechat_location_bar"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_personal"
            style="@style/Buttom_Item_Style"
            android:layout_marginLeft="0.5dp"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/img_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_my"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:text="@string/my_mine"
                android:textColor="@color/wechat_location_bar"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>