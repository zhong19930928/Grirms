<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:id="@+id/ll_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workplan_selctor"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/workpan_item_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/work_plan_text_color"
                    android:textSize="@dimen/work_plan_content_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/workpan_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/work_plan_name2"
                    android:textColor="@color/work_plan_text_color"
                    android:textSize="@dimen/work_plan_content_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/workpan_item_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/icon_edit"
                android:gravity="right|center_vertical"
                android:text="@string/work_plan_name7"
                android:textColor="@color/app_color"
                android:textSize="@dimen/work_plan_content_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/workpan_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/work_plan_name8"
            android:textColor="@color/work_plan_text_color"
            android:textSize="@dimen/work_plan_content_text_size" />

        <TextView
            android:id="@+id/workpan_item_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/work_plan_name3"
            android:textColor="@color/work_plan_text_color"
            android:textSize="@dimen/work_plan_content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_plan_name4"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <com.yunhu.yhshxc.workplan.RatingBar
                android:id="@+id/rb_important"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                app:starCount="5"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starImageSize="15dp"
                app:starPadding="5dp"
                app:starStep="1"
                app:stepSize="Full" >
            </com.yunhu.yhshxc.workplan.RatingBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/work_plan_name5"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <com.yunhu.yhshxc.workplan.RatingBar
                android:id="@+id/rb_jinji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                app:starCount="5"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starImageSize="15dp"
                app:starPadding="5dp"
                app:starStep="1"
                app:stepSize="Full" >
            </com.yunhu.yhshxc.workplan.RatingBar>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workplan_selctor"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/work_plan_name9"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <EditText
                android:id="@+id/workpan_item_name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/work_plan_name10"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#dfedef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/work_plan_name11"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <EditText
                android:id="@+id/workpan_item_content_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/work_plan_name10"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#dfedef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/work_plan_name12"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <EditText
                android:id="@+id/workpan_item_beizhu_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/work_plan_name10"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#dfedef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/work_plan_name13"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <com.yunhu.yhshxc.workplan.RatingBar
                android:id="@+id/rb_impor_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                app:starCount="5"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starImageSize="20dp"
                app:starPadding="10dp"
                app:starStep="1"
                app:stepSize="Full" >
            </com.yunhu.yhshxc.workplan.RatingBar>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#dfedef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/work_plan_name14"
                android:textColor="@color/work_plan_text_color"
                android:textSize="@dimen/work_plan_content_text_size" />

            <com.yunhu.yhshxc.workplan.RatingBar
                android:id="@+id/rb_jinji_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                app:starCount="5"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starImageSize="20dp"
                app:starPadding="10dp"
                app:starStep="1"
                app:stepSize="Full" >
            </com.yunhu.yhshxc.workplan.RatingBar>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#dfedef" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn_delete_workplan"
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@drawable/workplan_delete_selector"
                android:text="@string/work_plane_delete"
                android:background="@color/white"
                />

            <Button
                android:id="@+id/btn_save_workplan"
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@drawable/workplan_save_selector"
                android:text="@string/work_plane_save"
                android:background="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>