<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:background="@color/driver_line">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_shape_bg_while"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/home_titlte_co"
            android:text="明日早餐推出广式饕餮大餐"/>
        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:textSize="11sp"
            android:textColor="@color/home_titlte_co"
            android:text="12月6日"/>
        <ImageView
            android:id="@+id/iv_item1"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_item2"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item1"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="11sp"
            android:textColor="@color/home_titlte_co"
            android:text="中餐厅邀请神秘打出推出各类广式早茶，敬请大家来品尝~~"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_shape_bg_black"
        android:text="下午2:12"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:gravity="center"/>
</RelativeLayout>
