<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/popupwindowbg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center">

    <Button
        android:id="@+id/table_stencil_use"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/func_detail_submit_btn"
        android:text="@string/use_template_data"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <Button android:layout_marginTop="20dp"
        android:padding="5dp"
        android:id="@+id/table_stencil_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/func_detail_submit_btn"
        android:text="@string/save_template_data"
        android:textColor="@color/white"
        android:textSize="25sp"/>

</LinearLayout>