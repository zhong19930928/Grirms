<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_product_item_click"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_order_stock_control_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013/6/5-今天"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order_stock_control_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="高森明晨花生油"
            android:textColor="@color/order_title"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_stock_control_stock_number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:gravity="center_vertical|right"
        android:text="721111"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="上次盘点："
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="期间退货："
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="有效进货："
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="总销量："
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_order_stock_control_last_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2000011"
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_stock_control_returned_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-10"
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_stock_control_effectively_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+110"
                android:textColor="@color/blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_stock_control_toatal_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+300"
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>