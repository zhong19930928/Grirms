<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_startmetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:text="新发起的会议成功"
        android:textColor="@color/home_titlte_co"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/tv_startmetting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/tv_startmetting"
        android:textSize="12sp"
        android:text="刚刚"
        android:textColor="@color/home_titlte_co"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/tv_startactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:maxEms="13"
        android:text="您的公司活动报名已成功"
        android:textColor="@color/home_titlte_co"
        android:layout_below="@+id/tv_startmetting"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:id="@+id/tv_startactivity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/tv_startactivity"
        android:textSize="12sp"
        android:text="12-05 16:30"
        android:textColor="@color/home_titlte_co"
        android:layout_alignBaseline="@+id/tv_startactivity"
        android:layout_marginBottom="12dp"
        />
    <ImageView
        android:layout_width="5dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/right"/>
</RelativeLayout>
