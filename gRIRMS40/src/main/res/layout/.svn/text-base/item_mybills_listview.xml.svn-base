<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/bills_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:maxEms="20"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="单据编号 00001111122004"/>
    <TextView
        android:id="@+id/bills_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bills_number"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/gray_sub"
        android:layout_marginLeft="15dp"
        android:text="单据类型：资产领用单"/>
    <TextView
        android:id="@+id/bills_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bills_type"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/main_bg"
        android:layout_marginLeft="15dp"
        android:text="创建时间：2017-09-16"/>

    <TextView
        android:id="@+id/bills_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
        android:textColor="@color/main_bg"
        android:text="已确认"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/meeting_right"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/shadow"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>