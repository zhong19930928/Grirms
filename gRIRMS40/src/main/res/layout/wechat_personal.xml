<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_shopping_car_order3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/app_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/wechat_tianjia_text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_person_informatiom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_info"
            android:textColor="@color/white"
            android:textSize="@dimen/wechat_title_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/wechat_tianjia_text_size"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_touxiang_xiugai"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/people" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_header"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_personal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:singleLine="true" 
				android:ellipsize="end"
                android:textSize="@dimen/wechat_chat_notice_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_personal_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_header"
            android:textColor="#AAAAAA"
            android:singleLine="true" 
				android:ellipsize="end"
            android:textSize="@dimen/wechat_chat_time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/click_img"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/job_position"
            android:textColor="@color/black"
            android:textSize="@dimen/wechat_chat_notice_text_size" />

        <TextView
            android:id="@+id/tv_zw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true" 
				android:ellipsize="end"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/click_img"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/job_department"
            android:textColor="@color/black"
            android:textSize="@dimen/wechat_chat_notice_text_size" />

        <TextView
            android:id="@+id/tv_bm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true" 
				android:ellipsize="end"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/click_img"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/personalized_signature"
            android:textColor="@color/black"
            android:textSize="@dimen/wechat_chat_notice_text_size" />

        <TextView
            android:id="@+id/tv_gxqm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true" 
				android:ellipsize="end"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/click_img"
            android:visibility="invisible"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:id="@+id/ll_my_focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wechat_ziliao_selector"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_attention"
            android:textColor="@color/black"
            android:textSize="@dimen/wechat_chat_notice_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true" 
			android:ellipsize="end"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/click_img"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wechat_ziliao_selector"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history_topic"
            android:textColor="@color/black"
            android:textSize="@dimen/wechat_chat_notice_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true" 
			android:ellipsize="end"
            android:textColor="@color/wechat_chat_item"
            android:textSize="@dimen/wechat_chat_time" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/click_img"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nearby_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>